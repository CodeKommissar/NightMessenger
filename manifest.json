{
  // Specifies version of the manifest.json used by the extension 
  "manifest_version": 2, 
  // Specifies the name of the extension
  "name": "Night Messenger", 
  // A short description of the extension
  "description": "Use Messenger.com at night! A UNOFFICIAL night mode for Facebook's web app. We have no affiliation with Facebook.",
  // Current version of the extension
  "version": "1.2.8",
  // Specifies the icons that will be used to represent the extension 
  "icons": { "16": "nightmessenger16.png",
           "48": "nightmessenger48.png",
          "128": "nightmessenger128.png" },
  // Request "special powers" for the extension
  "permissions": [
    // Specifies the extra privileges the extension will need to correctly function
    "storage", "webNavigation", "tabs",
    // Match the URLs where the extension is requesting extra privileges
    "http://www.messenger.com/t/*", 
    "https://www.messenger.com/t/*",
    "https://www.messenger.com/new"
  ],
  // This represents a button that the extension will add to the browser's toolbar.
  "browser_action": {
    // Default icon for the extension
    "default_icon": "off.png",
    // Text showed when the user hovers over the button for the extension
    "default_title": "Toggle Messenger's night mode."
    },
  // Instructs the browser to load the "driver.js" scripts in the web pages 
  // whose URL matches the messenger.com site.
  "content_scripts": [
  {
    "matches": ["https://www.messenger.com/","https://www.messenger.com/t/*"],
    "js": [
      "driver.js"
    ]
  }
  ],
  // This lists all the packaged resources that we want to make available to web pages
  "web_accessible_resources" : [
    "nightmode.css"
  ],
  // In here we include one or more background scripts. 
  // These scripts are loaded as soon as the extension is loaded and stay loaded 
  // until the extension is disabled or uninstalled.
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  }
}
