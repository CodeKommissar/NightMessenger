{	
  "manifest_version": 2,

  "name": "Night Messenger",
  "description": "Use Messenger.com at night! An UNOFFICIAL night mode for Facebook's web app. We have no affiliation with Facebook.",
  "version": "1.3.0",
  "permissions": [
    "storage", "webNavigation", "tabs","http://*/*", "https://*/*"
  ],
  "browser_action": {
    "default_icon": "dist/img/off.png",
    "default_title": "Toggle Messenger night mode."
  },
  "content_scripts": [
    {
      "matches": ["https://www.messenger.com/","https://www.messenger.com/t/*"],
      "js": [
        "driver.js"
      ]
    }
  ],
  "web_accessible_resources" : [
    "dist/**"
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"] 
  }
}
