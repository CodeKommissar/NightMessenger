{	
  "manifest_version": 2,

  "name": "Night Messenger",
  "description": "Use Messenger.com at night! A UNOFFICIAL night mode for Facebook's web app. We have no affiliation with Facebook.",
  "version": "1.1.3",
  "permissions": [
  "tabs","http://*/*", "https://*/*", "cookies"
  ],
  "browser_action": {
    "default_icon": "off.png",
    "default_title": "Toggle Messenger's night mode."
    },
    "content_scripts": [
    {
      "matches": ["https://www.messenger.com/t/*"],
      "js": ["jquery.js", "night.js", "day.js"]
    }
    ],
    "web_accessible_resources" : [
    "nightmode.css"
    ],
    "background": {
      "persistent": true,
      "scripts": ["background.js"] 
    }
  }