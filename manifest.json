{	
  "manifest_version": 2,

  "name": "Night Messenger",
  "description": "A UNOFFICIAL night mode for Facebook's Messenger.com. No affiliation with Facebook.",
  "version": "1.0",
  "permissions": [
  "tabs","http://*/*", "https://*/*", "cookies"
  ],
  "browser_action": {
    "default_icon": "off.png",
    "default_title": "Toggle night mode."
    },
    "content_scripts": [
    {
      "matches": ["https://www.messenger.com/t/*"],
      "js": ["jquery.js"]
    }
    ],
    "web_accessible_resources" : [
    "nightmode.css"
    ],
    "background": {
      "persistent": true,
      "scripts": ["background.js"] 
    }
  }